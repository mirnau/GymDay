<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GymDay.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GymDay.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Welcome"
        ContentTemplate="{DataTemplate views:WelcomePage}"
        Route="WelcomePage" />
    
    <ShellContent
        Title="Your Programs"
        ContentTemplate="{DataTemplate views:WorkoutPlansPage}"
        Route="WorkoutPlansPage" />

    <ShellContent
        Title="Current Workout"
        ContentTemplate="{DataTemplate views:CurrentWorkoutPage}"
        Route="CurrentWorkoutPage" />

</Shell>
